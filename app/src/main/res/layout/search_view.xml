<?xml version="1.0" encoding="utf-8"?>
<org.secfirst.advancedsearch.mvp.views.SearchResultView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            
            <TextView
                    android:id="@+id/resultCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            
            <TextView
                    android:id="@+id/advancedCriteriaToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            
        </LinearLayout>
        
        <LinearLayout
                android:id="@+id/advancedCriteriaPanel"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    
            <pe.orbis.materialpillsbox.MaterialPillsBox
                    android:id="@+id/mtbArea"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:closeIcon="@drawable/ic_close_white_24dp"
                    app:pillCloseIconMarginLeft="20dp"
                    app:pillSelectionMode="multi"
                    app:pillBackground="@color/md_deep_purple_600"
                    app:pillSelectedBackground="@color/md_deep_purple_600"
                    app:showCloseIcon="true"
                    app:pillTextColor="@color/md_white_1000"
                    app:pillMarginBottom="10dp"/>
            
            <LinearLayout
                    android:id="@+id/criteriaLayout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content" />
            
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                
                <Button
                        android:id="@+id/searchCancel"
                        android:text="@string/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
    
                <Button
                        android:id="@+id/searchApply"
                        android:text="@string/apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                
            </LinearLayout>
            
        </LinearLayout>
    
        <TextView
                android:id="@+id/searchTermView"
                android:layout_marginTop="20dp"
                android:gravity="start|left"
                android:layout_marginLeft="@dimen/defaultMargin"
                android:layout_marginRight="@dimen/defaultMargin"
                android:layout_width="match_parent"
                android:textSize="@dimen/largerTextSize"
                android:layout_height="wrap_content"/>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchResultsListView"
            android:layout_marginLeft="@dimen/defaultMargin"
            android:layout_marginRight="@dimen/defaultMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView
                android:id="@+id/searchResultsEmptyView"
                android:visibility="gone"
                android:text="@string/no_results_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    
        <TextView
                android:id="@+id/searchResultsNoSearchTerm"
                android:visibility="gone"
                android:text="@string/no_search_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>


</org.secfirst.advancedsearch.mvp.views.SearchResultView>
